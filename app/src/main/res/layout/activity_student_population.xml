<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_population"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rdbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RadioButton
            android:id="@+id/all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="All Students"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/green"
            />



        <RadioButton
            android:id="@+id/specific"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specific Students"
            android:textSize="20dp"
            android:textColor="@color/green"
            android:textStyle="bold" />
    </RadioGroup>


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Decipline"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:padding="12dp"


                />
            <TextView
                android:id="@+id/select_decipline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="Select Decipline "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:padding="12dp"
                android:drawablePadding="16dp"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:background="@android:drawable/editbox_background"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Semester"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:padding="12dp"


                />
            <TextView
                android:id="@+id/select_Semester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="Select Semester"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:padding="12dp"
                android:drawablePadding="16dp"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:background="@android:drawable/editbox_background"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Section    "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:padding="12dp"


                />
            <TextView
                android:id="@+id/select_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:hint="Select Section    "
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:padding="12dp"
                android:drawablePadding="16dp"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:background="@android:drawable/editbox_background"

                />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/add"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add" />


    <TextView
        android:layout_marginTop="30dp"
        android:textStyle="bold"
         android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="......Optional......" />

    <EditText
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:hint="enter cgpa"
        android:id="@+id/cgpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />



</androidx.appcompat.widget.LinearLayoutCompat>